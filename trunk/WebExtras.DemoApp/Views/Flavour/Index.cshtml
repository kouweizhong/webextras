@using WebExtras.DemoApp.App_Start
@using SquishIt.Framework
@using SquishIt.Mvc
@{
  Layout = null;
}
<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width" />
  <meta name="author" content="Mihir Mone" />
  <meta name="application-name" content="WebExtras" />
  <meta name="description" content=".net mvc, .net mvc 4, .net mvc helpers, bootstrap, flot, datatables, gumby" />
  <link rel="icon" type="image/ico" href="@Links.Content.favicon_ico" />
  <title>Home - WebExtras</title>
  @Bundle.Css().MvcRenderCachedAssetTag(ContentBundle.CSSMinimal.GetStringValue())
  <style>
    body {
      line-height: 20px;
      text-align: center;
    }

    h2 {
      text-align: center;
      padding-top: 50px;
      margin: 10px 0;
      font-family: inherit;
      font-weight: bold;
      line-height: 40px;
      font-size: 31.5px;
      color: inherit;
      text-rendering: optimizelegibility;
      display: inline-block;
    }

    a {
      text-decoration: none;
      padding: 11px 19px;
      font-size: 17.5px;
      -moz-border-radius: 6px 6px 6px 6px;
      -webkit-border-radius: 6px 6px 6px 6px;
      border-radius: 6px 6px 6px 6px;
      vertical-align: middle;
    }

    table {
      text-align: center;
      width: 600px;
      margin: 0 auto;
    }

    .bs-button {
      -moz-border-bottom-colors: none;
      -moz-border-left-colors: none;
      -moz-border-right-colors: none;
      -moz-border-top-colors: none;
      -moz-border-image: none;
      -o-border-image: none;
      -webkit-border-image: none;
      -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
      -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
      box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
      cursor: pointer;
      line-height: 20px;
      margin-bottom: 0;
      background-color: #006DCC;
      background-image: linear-gradient(to bottom, #0088CC, #0044CC);
      background-repeat: repeat-x;
      border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
      color: #FFFFFF;
      -webkit-text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
      text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    }

    .bs3-button {
      background-image: linear-gradient(to bottom, #428BCA 0%, #3071A9 100%);
      background-repeat: repeat-x;
      border-color: #2D6CA2;
      -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, 0.15) inset, 0 1px 1px rgba(0, 0, 0, 0.075);
      box-shadow: 0 1px 0 rgba(255, 255, 255, 0.15) inset, 0 1px 1px rgba(0, 0, 0, 0.075);
      -webkit-text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
      text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
      background-color: #428BCA;
      border-radius: 6px 6px 6px 6px;
      font-size: 18px;
      line-height: 1.33;
      padding: 10px 16px;
      color: #FFFFFF;
      cursor: pointer;
      display: inline-block;
      font-weight: normal;
      margin-bottom: 0;
      text-align: center;
      vertical-align: middle;
      white-space: nowrap;
      text-decoration: none;
      -moz-user-select: none;
      -ms-user-select: none;
      -webkit-user-select: none;
      user-select: none;
    }

    .gumby-button {
      background-color: #2A85DC;
      background-image: linear-gradient(#85B7E7, #2A85DC);
      -webkit-box-shadow: 0 0 3px #F0F6FC inset;
      box-shadow: 0 0 3px #F0F6FC inset;
      color: #FFFFFF;
      padding: 12px 19px;
    }

    .ui-button {
      background: #ffc73d url('/content/img/jqueryui/ui-bg_glass_40_ffc73d_1x400.png') 50% 50% repeat-x;
      color: #111111;
      cursor: pointer;
      line-height: normal;
      margin-right: 0.1em;
      overflow: visible;
      position: relative;
      padding: 12px 19px;
    }

    #build-date a {
      padding: 0;
      font-size: 13px;
      border-radius: 0;
      vertical-align: bottom;
    }
  </style>
</head>
<body>
  <h2>WebExtras Demo and Documentation
    <br />
    <br />
    SELECT YOUR FLAVOUR
  </h2>
  <br />
  <br />
  <br />
  <br />
  <table>
    <tr>
      <td>
        @Html.Hyperlink("Bootstrap 2.x", Url.Content("~/bootstrap")).AddCssClass("bs-button")
      </td>
      <td>
        @Html.Hyperlink("Bootstrap 3.x", Url.Content("~/bootstrap3")).AddCssClass("bs3-button")
      </td>
      <td>
        @Html.Hyperlink("Gumby 2.5.x", Url.Content("~/gumby")).AddCssClass("gumby-button")
      </td>
      <td>
        @Html.Hyperlink("jQuery UI", Url.Content("~/jqueryui")).AddCssClass("ui-button")
      </td>
    </tr>
  </table>
  <br />
  <br />
  <br />
  <br />
  <hr />
  <footer>
    <small style="float: left" id="build-date">@{ Html.RenderAction(MVC.Flavour.BuildDetails()); }</small>
    <small style="float: right">Copyright &copy; @DateTime.Now.Year Mihir Mone. All Rights Reserved.</small>
  </footer>
</body>
</html>
