@model string

@{
  ViewBag.Title = "Download";
}
<h3 class="keep-center">Downloads
</h3>
<div class="row-fluid">
  <div class="keep-center">
    @(Html.Hyperlink(" Stable<small> (" + Model + ")</small>", "http://webextras.codeplex.com/releases")
      .AsButton(EBootstrapButton.Success, EBootstrapButton.Large)
      .AddIcon(EFontAwesomeIcon.Download, EFontAwesomeIconSize.Large))

    &nbsp;&nbsp;&nbsp;

    @(Html.Hyperlink(" Nightly", "http://mihirmone.entrydns.org/app-downloads/webextras/webextras-nightly.zip")
      .AsButton(EBootstrapButton.Default, EBootstrapButton.Large)
      .AddIcon(EFontAwesomeIcon.Download, EFontAwesomeIconSize.Large))

    &nbsp;&nbsp;&nbsp;

    @(Html.Hyperlink(" NuGet Gallery", "https://www.nuget.org/packages?q=webextras")
      .AsButton(EBootstrapButton.Default, EBootstrapButton.Large)
      .AddIcon(EFontAwesomeIcon.Download, EFontAwesomeIconSize.Large))

    <br />
    @Html.Hyperlink("Older versions", "javascript:gotoCodeplex()")
  </div>
</div>
<br />
<div class="row-fluid">
  <div class="span12 changelog">
    @Html.Inline(Links.Content.inline.changelog_html)
  </div>
</div>
<br />
<script type="text/javascript">
  $(function () {
    $('.changelog').jScrollPane();
  });
</script>
