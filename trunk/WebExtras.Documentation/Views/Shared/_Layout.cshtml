@using SquishIt.Framework
@using SquishIt.Mvc

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - WebExtras Documentation</title>

  @Bundle.Css().MvcRenderCachedAssetTag(ContentBundle.CssMain.ToString())

</head>
<body>

  <div class="container">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
  </div>

  @Bundle.JavaScript().MvcRenderCachedAssetTag(ContentBundle.JsMain.ToString())

</body>
</html>